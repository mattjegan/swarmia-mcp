# Swarmia MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Swarmia API Token
# Get this from Settings/API tokens in your Swarmia dashboard
SWARMIA_API_TOKEN=your_api_token_here

# Optional: Default timezone for data aggregation
# Uses tz database identifiers (e.g., America/New_York, Europe/London, UTC)
# Default: UTC
DEFAULT_TIMEZONE=UTC

# Optional: Default timeframe for reports
# Options: last_7_days, last_14_days, last_30_days, last_60_days, last_90_days, last_180_days, last_365_days
# Default: last_7_days
DEFAULT_TIMEFRAME=last_7_days
